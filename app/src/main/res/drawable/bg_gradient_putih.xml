<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape
            android:shape="rectangle">
            <gradient
                android:angle="90"
                android:endColor="#FFFFFF"
                android:startColor="#F3F3F3"
                android:type="linear" />
            <stroke android:width="1dp"
                android:color="@color/abu_abu_light" />
        </shape>
    </item>

    <item android:top="1dp">
        <shape
            android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/putih" />
            <gradient
                android:angle="90"
                android:endColor="#FFFFFF"
                android:startColor="#F3F3F3"
                android:type="linear" />
        </shape>
    </item>

</layer-list>

