<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_2sdp"
    android:layout_marginTop="@dimen/_2sdp"
    android:layout_marginEnd="@dimen/_2sdp"
    android:layout_marginBottom="@dimen/_2sdp"
    android:background="@drawable/bg_icon_kategori">

    <com.balysv.materialripple.MaterialRippleLayout
        android:id="@+id/btnKategori"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/transparent"
        app:mrl_rippleAlpha="0.5"
        app:mrl_rippleColor="@color/white"
        app:mrl_rippleDelayClick="false"
        app:mrl_rippleHover="true"
        app:mrl_rippleOverlay="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_2sdp"
            android:background="@color/putih"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/bgIcon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp">

                <ImageView
                    android:id="@+id/imIcon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/banner"
                    android:scaleType="fitXY"
                    android:src="@drawable/icons8_bok_choy_100" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tvKategori"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginEnd="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:background="@color/transparent"
                android:fontFamily="@font/gothic_regular"
                android:text="@string/kategori"
                android:textAlignment="center"
                android:textColor="@color/abu_abu_dark"
                android:textSize="@dimen/_9ssp" />
        </LinearLayout>
    </com.balysv.materialripple.MaterialRippleLayout>
</RelativeLayout>